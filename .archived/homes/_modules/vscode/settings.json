{
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "editor": {
    "bracketPairColorization.enabled": true,
    "defaultFormatter": "esbenp.prettier-vscode",
    "fontFamily": "'Jetbrains Nerd Font Mono Light'",
    "formatOnSave": true,
    "guides": {
      "bracketPairs": true,
      "bracketPairsHorizontal": true,
      "highlightActiveBracketPair": true
    },
    "stickyScroll.enabled": true,
    "tabSize": 2
  },
  "explorer": {
    "compactFolders": false,
    "confirmDelete": false,
    "confirmDragAndDrop": false
  },
  "extensions": {
    "autoCheckUpdates": false,
    "autoUpdate": false
  },
  "files": {
    "associations": {},
    "autoSave": "onFocusChange",
    "eol": "\n",
    "insertFinalNewline": true,
    "trimFinalNewlines": true,
    "trimTrailingWhitespace": true
  },
  "git": {
    "autofetch": true,
    "confirmSync": false
  },
  "http": {
    "proxy": "http://127.0.0.1:1080",
    "noProxy": ["localhost"]
  },
  "linter.linters.yamllint.configFiles": [
    ".yamllint.yml",
    ".yamllint.yaml",
    ".yamllint",
    ".ci/yamllint/.yamllint.yaml"
  ],
  "nix": {
    "enableLanguageServer": true,
    "serverPath": "nixd",
    "serverSettings.nixd.formatting.command": "nixfmt"
  },
  "redhat.telemetry.enabled": false,
  "terminal.integrated.inheritEnv": true,
  "todo-tree": {
    "highlights.useColourScheme": true,
    "tree.expanded": true
  },
  "update": {
    "mode": "manual",
    "showReleaseNotes": false
  },
  "vs-kubernetes.crd-code-completion": "disabled",
  "window": {
    "commandCenter": false,
    "newWindowDimensions": "maximized",
    "restoreWindows": "none",
    "titleBarStyle": "custom"
  },
  "workbench": {
    "colorTheme": "Default Dark Modern",
    "iconTheme": "material-icon-theme",
    "editorAssociations.{git,gitlens}:/**/*.{md,csv,svg}": "default",
    "sideBar.location": "left",
    "startupEditor": "newUntitledFile",
    "tree.renderIndentGuides": "none"
  }
}
